<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="OpenGNOP" file="OpenGNOP" main="Main" version="0.0.1" company="Steve Richey" />
	
	<window width="640" height="480" fps="60" orientation="portrait" background="#000000" resizable="true" if="web" />
	<window width="640" height="480" fps="60" orientation="landscape" background="#000000" fullscreen="false" hardware="true" vsync="true" unless="web" />
	
	<set name="SWF_VERSION" value="11.2" />
	<set name="BUILD_DIR" value="export" />
	
	<classpath name="source" />
	<classpath name="../Open7/Source" />
	
	<!--You can use rename="newName" to shorten the paths to the individual subdirectories!-->
	<assets path="assets/images" rename="images" />
	<assets path="assets/sounds" rename="sounds" exclude="*.ogg" if="flash"/>
	<assets path="assets/sounds" rename="sounds" exclude="*.mp3" if="desktop"/>
	
	<haxelib name="openfl" />
	
	<haxedef name="EN" />
	<!-- <haxedef name="SP" /> -->
	<!-- <haxedef name="FR" /> -->
	<!-- <haxedef name="GE" /> -->
	
	<icon path="assets/gnop.svg" />
	
	<app preloader="open7.utils.OSPreloader" unless="desktop" />
</project>